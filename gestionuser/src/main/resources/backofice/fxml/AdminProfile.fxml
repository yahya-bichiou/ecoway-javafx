<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.shape.Circle?>
<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="backoffice.controllers.AdminProfileController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #1d1f26;">
    <children>
        <VBox alignment="CENTER" spacing="20" layoutX="200.0" layoutY="80.0" prefWidth="400" style="-fx-background-color: #2c2f36; -fx-background-radius: 15;" >
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>
            <Label text="Admin Profile" textFill="white" style="-fx-font-size: 26px; -fx-font-weight: bold;"/>

            <ImageView fx:id="profileImageView"
                       fitHeight="100" fitWidth="100"
                       preserveRatio="true"
                       style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2); -fx-border-radius: 50px; -fx-background-radius: 50px;">
                <clip>
                    <Circle radius="50" centerX="50" centerY="50"/>
                </clip>
            </ImageView>

            <VBox spacing="10">
                <HBox spacing="10">
                    <Label text="Name:" textFill="#aaaaaa"/>
                    <Label fx:id="nameLabel" textFill="white"/>
                </HBox>
                <HBox spacing="10">
                    <Label text="Email:" textFill="#aaaaaa"/>
                    <Label fx:id="emailLabel" textFill="white"/>
                </HBox>
                <HBox spacing="10">
                    <Label text="Role:" textFill="#aaaaaa"/>
                    <Label fx:id="roleLabel" textFill="white"/>
                </HBox>
            </VBox>

            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="editProfileButton"
                        text="Edit Profile"
                        onAction="#handleEditProfile"
                        style="-fx-background-color: #9e6de0; -fx-background-radius: 20; -fx-text-fill: white; -fx-pref-width: 120;"/>
                <Button fx:id="backButton"
                        text="Go Back"
                        onAction="#handleGoBack"
                        style="-fx-background-color: #a8b7cb; -fx-background-radius: 20; -fx-text-fill: white; -fx-pref-width: 100;"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
