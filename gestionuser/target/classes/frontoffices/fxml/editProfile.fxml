<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="frontoffice.controllers.EditProfileController">

    <!-- TOP NAVIGATION -->
    <top>
        <HBox spacing="30" alignment="CENTER_LEFT"
              style="-fx-background-color: white; -fx-padding: 15 40;">
            <ImageView fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true">
                <Image url="@/assets/logo.png"/>
            </ImageView>

            <Region HBox.hgrow="ALWAYS"/>

            <Label text="Edit Profile"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        </HBox>
    </top>

    <!-- CENTER CONTENT -->
    <center>
        <VBox spacing="25" alignment="CENTER"
              style="-fx-padding: 50; -fx-background-color: #f9f9f9; -fx-border-color: #e0e0e0; -fx-border-radius: 10; -fx-background-radius: 10;"
              BorderPane.alignment="CENTER">

            <!-- Profile Picture -->
            <ImageView fx:id="profileImageView"
                       fitWidth="120"
                       fitHeight="120"
                       preserveRatio="false"
                       style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 4);" />

            <Button text="Change Profile Picture"
                    onAction="#handleChangePicture"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 13px; -fx-background-radius: 20; -fx-padding: 6 18;" />

            <!-- Input Fields -->
            <TextField fx:id="nameField"
                       promptText="Enter your name"
                       style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 6; -fx-border-radius: 6;" />

            <PasswordField fx:id="passwordField"
                           promptText="Enter new password"
                           style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 6; -fx-border-radius: 6;" />

            <!-- Action Buttons -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="Cancel"
                        onAction="#handleCancel"
                        style="-fx-background-color: #bdc3c7; -fx-text-fill: white; -fx-font-size: 13px; -fx-background-radius: 20; -fx-padding: 6 20;" />

                <Button text="Save Changes"
                        onAction="#handleSave"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 13px; -fx-background-radius: 20; -fx-padding: 6 20;" />
            </HBox>

            <Label fx:id="statusLabel"
                   text=""
                   style="-fx-text-fill: red; -fx-font-size: 12px;" />
        </VBox>
    </center>
</BorderPane>
