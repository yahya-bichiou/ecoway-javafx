<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="frontoffice.controllers.LoginController"
           stylesheets="@../styles/login.css">

    <VBox alignment="CENTER" spacing="20" styleClass="login-card">
        <!-- Logo -->
        <ImageView fitHeight="80" fitWidth="80" preserveRatio="true">
            <Image url="@../../assets/logo.png"/>
        </ImageView>

        <!-- App Name -->
        <Label text="ECOWAY" styleClass="app-name"/>

        <!-- Subtitle -->
        <Label text="Please sign in" styleClass="subtitle"/>

        <!-- Form -->
        <VBox spacing="10" alignment="CENTER">
            <TextField fx:id="emailField" promptText="Email" styleClass="text-input"/>
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-input"/>
        </VBox>

        <!-- Buttons -->
        <VBox spacing="10" alignment="CENTER">
            <Button text="Sign in" onAction="#handleLoginAction" styleClass="primary-button"/>
            <Button text="Register" onAction="#openRegisterPage" styleClass="primary-button"/>
            <Button text="Login with Google"  onAction="#handleGoogleLogin"  styleClass="google-button"/>
        </VBox>

        <!-- Forgot Password -->
        <Hyperlink text="Forgot Password?" onAction="#handleSendResetLink" styleClass="forgot-link"/>

        <!-- Error Label -->
        <Label fx:id="errorLabel" text="" styleClass="error-label"/>


    </VBox>
</StackPane>
