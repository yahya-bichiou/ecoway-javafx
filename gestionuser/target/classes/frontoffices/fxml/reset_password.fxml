<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontoffice.controllers.ResetPasswordController"
      alignment="CENTER" spacing="20" style="-fx-background-color: #f4f4f4; -fx-padding: 40px;">

    <Label text="Reset Password" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Reset Token -->
    <TextField fx:id="tokenField" promptText="Enter Reset Token" maxWidth="300" visible="false" />

    <!-- New Password -->
    <PasswordField fx:id="newPasswordField" promptText="Enter New Password" maxWidth="300" />

    <!-- Message Label -->
    <Label fx:id="messageLabel" style="-fx-font-size: 14px;" textFill="red"/>

    <!-- Reset Button -->
    <Button text="Reset Password" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10px 20px;"
            onAction="#handleResetPassword"/>

    <!-- Back to Login Button -->
    <Button text="Back to Login" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 10px 20px;"
            onAction="#handleBackToLogin"/>
</VBox>
