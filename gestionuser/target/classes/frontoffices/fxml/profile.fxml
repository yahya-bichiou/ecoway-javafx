<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="frontoffice.controllers.ProfileController">

    <!-- TOP NAVIGATION BAR -->
    <top>
        <HBox spacing="30" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15 40;">
            <ImageView fx:id="logoImage" fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@/assets/logo.png"/>
                </image>
            </ImageView>

            <HBox spacing="20" style="-fx-alignment: center;">
                <Label text="Home"  styleClass="nav-label"/>
                <Label text="DÃ©pots"  styleClass="nav-label"/>
                <Label text="Produits"  styleClass="nav-label"/>
                <Label text="Boutique" styleClass="nav-label"/>
                <Label text="Blog" styleClass="nav-label"/>
                <Label text="Event"  styleClass="nav-label"/>
            </HBox>

            <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>

            <!-- Profile Icon and Name Container -->
            <HBox spacing="10" alignment="CENTER">
                <ImageView fx:id="profileIcon"
                           fitHeight="40"
                           fitWidth="40"
                           pickOnBounds="true"
                           preserveRatio="false"
                           onMouseClicked="#goToProfile"
                           style="-fx-cursor: hand;" />
                <Label fx:id="userNameLabel" text="User" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
            </HBox>
        </HBox>
    </top>


    <!-- CENTER CONTENT -->
    <center>
        <VBox spacing="20"
              alignment="CENTER"
              style="-fx-padding: 40; -fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);">


        <ImageView fx:id="profileImageView"
                       fitHeight="120"
                       fitWidth="120"
                       preserveRatio="false"
                       style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 4); -fx-border-color: #ccc; -fx-border-radius: 60; -fx-background-radius: 60;" />

            <Label text="Welcome to Your Profile"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <Label fx:id="welcomeMessage"
                   text=""
                   style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d;" />

            <!-- New Edit Profile Button -->
            <Button text="Edit Profile"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 30; -fx-padding: 8 20;"
                    onAction="#goToEditProfile" />

            <Button text="Logout"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 30; -fx-padding: 8 20;"
                    onAction="#handleLogoutAction" />

        </VBox>
    </center>


</BorderPane>

