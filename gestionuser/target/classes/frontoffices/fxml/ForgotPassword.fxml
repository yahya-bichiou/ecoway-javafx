<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="frontoffice.controllers.ForgotPasswordController"
           stylesheets="@../styles/login.css">

    <VBox alignment="CENTER" spacing="20" styleClass="login-card">

        <!-- Logo -->
        <ImageView fitHeight="80" fitWidth="80" preserveRatio="true">
            <Image url="@../../assets/logo.png"/>
        </ImageView>

        <!-- Title -->
        <Label text="Reset Password" styleClass="app-name"/>

        <!-- Subtitle -->
        <Label text="Enter your email to reset your password" styleClass="subtitle"/>

        <!-- Email Field -->
        <VBox spacing="10" alignment="CENTER">
            <TextField fx:id="emailField" promptText="Email" styleClass="text-input"/>
        </VBox>

        <!-- Buttons -->
        <VBox spacing="10" alignment="CENTER">
            <Button text="Send Reset Link" onAction="#handleSendResetLink" styleClass="primary-button"/>
            <Button text="Back to Login" onAction="#handleBackToLogin" styleClass="primary-button"/>
        </VBox>

        <!-- Message Label -->
        <Label fx:id="messageLabel" text="" styleClass="error-label"/>
    </VBox>
</StackPane>
