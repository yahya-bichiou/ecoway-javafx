<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RegisterController" alignment="CENTER" spacing="10">
    <TextField fx:id="nameField" promptText="Full Name" />
    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />
    <TextField fx:id="imageProfileField" promptText="Profile Image (optional)" />
    <Button text="Register" onAction="#handleRegisterAction" />
    <Label fx:id="errorLabel" textFill="red" />
</VBox>
