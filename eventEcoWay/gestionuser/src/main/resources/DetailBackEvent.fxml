<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DetailEventBackController">
    <top>
        <HBox style="-fx-background-color: #2c3e50;" alignment="CENTER" spacing="20">
            <Label text="Détails de l'Événement" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="100" />
                    <ColumnConstraints hgrow="ALWAYS" minWidth="200" />
                </columnConstraints>

                <!-- Titre -->
                <Label text="Titre:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="titreField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <!-- Description -->
                <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextArea fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <!-- Contact -->
                <Label text="Contact:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="contactField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <!-- Localisation -->
                <Label text="Localisation:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="localisationField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                <!-- Date -->
                <Label text="Date:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <DatePicker fx:id="datePicker" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                <!-- Récompense -->
                <Label text="Récompense:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="recomponseField" GridPane.rowIndex="5" GridPane.columnIndex="1" />
            </GridPane>

            <HBox spacing="20" alignment="CENTER">
                <Button text="Retour" onAction="#handleBack" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>