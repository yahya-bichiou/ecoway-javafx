<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.EditCommentaireController"
            prefWidth="400" prefHeight="450"
            stylesheets="@back.css">

    <VBox spacing="20" alignment="TOP_CENTER"
          AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

        <!-- ✅ Titre principal -->
        <Label text="Modifier un Commentaire"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: black;" />

        <!-- Champ Auteur -->
        <VBox spacing="5" prefWidth="350">
            <Label text="Auteur" />
            <TextField fx:id="auteurField" promptText="Nom de l'auteur" />
        </VBox>

        <!-- Champ Message -->
        <VBox spacing="5" prefWidth="350">
            <Label text="Message" />
            <TextArea fx:id="messageField" promptText="Votre message..." prefRowCount="3" />
        </VBox>

        <!-- Affichage titre du post (lecture seule) -->
        <VBox spacing="5" prefWidth="350">
            <Label text="Post associé" />
            <Label fx:id="postTitleLabel" style="-fx-text-fill: #9e6de0; -fx-font-weight: bold;" />
        </VBox>

        <!-- Boutons -->
        <HBox spacing="15" alignment="CENTER">
            <Button text="Mettre à jour" onAction="#handleUpdate" styleClass="mauve-button" />
            <Button text="Annuler" onAction="#handleCancel" styleClass="rose-button" />
        </HBox>

    </VBox>
</AnchorPane>
