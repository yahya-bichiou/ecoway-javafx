<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.DetailEventFrontController"
            stylesheets="@styles.css"
            prefHeight="600.0" prefWidth="800.0">

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <Label text="Détails de l'événement" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints prefWidth="150"/>
                    <ColumnConstraints prefWidth="300"/>
                </columnConstraints>

                <children>
                    <!-- Titre -->
                    <Label text="Titre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="titreField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <!-- Description -->
                    <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <!-- Contact -->
                    <Label text="Contact:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="contactField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <!-- Localisation -->
                    <Label text="Localisation:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="localisationField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <!-- Date -->
                    <Label text="Date:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="datePicker" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <!-- Récompense -->
                    <Label text="Récompense:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <TextField fx:id="recomponseField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                </children>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Retour" onAction="#handleBack" styleClass="cancel-button"/>
                <Button onAction="#AddParticipant" prefHeight="39.0" prefWidth="196.0" text="participer"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>