<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controllers.ProduitFrontController">

    <!-- Top Navigation Bar - Version premium -->
    <top>
        <HBox style="-fx-background-color: linear-gradient(to right, #2E7D32, #4CAF50);
                    -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 3);"
              alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>
            <!-- Logo/Title -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <ImageView fitHeight="60" fitWidth="60" preserveRatio="true">
                    <image>
                        <Image url="@images/logo.png" />
                    </image>
                </ImageView>
                <Label text="WELCOM" style="-fx-text-fill: white; -fx-font-size: 30px; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Navigation Buttons Container -->
            <HBox alignment="CENTER" spacing="15" style="-fx-padding: 0 0 0 30;">
                <Button text="Accueil" styleClass="nav-button" />
                <Button text="Événements" styleClass="nav-button" />
                <Button text="Dépôts" styleClass="nav-button" />
                <Button text="Boutique" styleClass="nav-button" />
                <Button text="Blog" styleClass="nav-button" />
                <Button text="Produits" styleClass="nav-button" />
            </HBox>

            <Pane HBox.hgrow="ALWAYS" />
        </HBox>
    </top>

    <!-- Main Content Area -->
    <center>
        <ScrollPane fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER">
            <VBox style="-fx-background-color: #f5f5f5; -fx-padding: 30;">
                <spacing>30</spacing>

                <!-- Logo/Title -->
                <HBox alignment="CENTER" spacing="20">
                    <Button style="-fx-background-color: transparent;">
                        <graphic>
                            <ImageView fitHeight="600" fitWidth="600" preserveRatio="true">
                                <image>
                                    <Image url="@/images/icon.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>

                <!-- Categories Filter -->
                <VBox spacing="20">
                    <Label text="Nos Catégories" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
                    <FlowPane fx:id="categoriesContainer" hgap="15" vgap="15">
                        <padding>
                            <Insets bottom="15"/>
                        </padding>
                    </FlowPane>
                </VBox>

                <!-- Products Grid -->
                <Label text="Nos Produits" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>

                <!-- Scrollable container for the products -->
                <ScrollPane fx:id="productsScrollPane" fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER">
                    <FlowPane fx:id="productsContainer" hgap="30" vgap="30"/>

                </ScrollPane>

                <!-- Pagination Information -->
                <Label fx:id="pageInfo" style="-fx-font-size: 16px; -fx-font-weight: normal; -fx-text-fill: #4CAF50;"/>

                <!-- Pagination Controls -->
                <HBox spacing="20" alignment="CENTER">
                    <Button fx:id="previousPageBtn" text="Précédent" onAction="#previousPage" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    <Button fx:id="nextPageBtn" text="Suivant" onAction="#nextPage" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
