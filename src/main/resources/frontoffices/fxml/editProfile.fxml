<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="frontoffice.controllers.EditProfileController">

    <top>
        <HBox spacing="30" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15 40;">
            <ImageView fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true">
                <Image url="@/assets/logo.png"/>
            </ImageView>

            <Region HBox.hgrow="ALWAYS" />

            <Label text="Edit Profile" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 40;">
            <ImageView fx:id="profileImageView" fitWidth="100" fitHeight="100" preserveRatio="true"/>
            <Button text="Change Profile Picture" onAction="#handleChangePicture"/>

            <TextField fx:id="nameField" promptText="Name" />
            <PasswordField fx:id="passwordField" promptText="New Password" />

            <HBox spacing="20" alignment="CENTER">
                <Button text="Cancel" onAction="#handleCancel"/>
                <Button text="Save Changes" onAction="#handleSave"/>
            </HBox>

            <Label fx:id="statusLabel" textFill="red"/>
        </VBox>
    </center>
</BorderPane>
